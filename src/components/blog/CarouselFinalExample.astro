---
import InteractiveExample from "../InteractiveExample.astro";
import CarouselCustomElement from "./CarouselCustomElement.astro";
---

<style>
  .carousel {
    display: flex;
    flex-direction: column;
    gap: 16px;
    max-width: 300px;
  }

  .slides-container {
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    gap: 16px;
  }

  @media screen and (max-width: 640px) {
    .slides-container {
      -ms-overflow-style: none; /* for Internet Explorer, Edge */
      scrollbar-width: none; /* for Firefox */
    }
    .slides-container::-webkit-scrollbar {
      display: none; /* for Chrome, Safari, and Opera */
    }
  }

  .slide {
    min-width: 300px;
    height: 300px;
    scroll-snap-align: start;
    list-style: none;
    background: theme(colors.slate.100);
    border-radius: 16px;
    display: grid;
    place-content: center;
  }

  .dots-container {
    display: flex;
    justify-content: center;
    gap: 8px;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 9999px;
    background-color: cyan;
  }
</style>
<InteractiveExample>
  <CarouselCustomElement>
    <section class="carousel">
      <ul class="slides-container" data-slides-container>
        <li class="slide">slide 1</li>
        <li class="slide">slide 2</li>
        <li class="slide">slide 3</li>
      </ul>
      <div class="dots-container" data-dots-container>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
      </div>
    </section>
  </CarouselCustomElement>
</InteractiveExample>
