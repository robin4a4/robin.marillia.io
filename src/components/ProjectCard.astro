---
import { Project, PROJECTS } from '../config';
import Link from './Link.astro'
import PillRow from './PillRow.astro';


export interface Props {
	project: Project;
}
const { project } = Astro.props;
const projectData = PROJECTS[project]
---

<div class:list={['group relative flex flex-col justify-between gap-16 px-16 pt-80 pb-16 bg-slate-100 rounded-xl hover:scale-[1.01] transition', { 'col-span-2': projectData.isLarge, 'col-span-1': !projectData.isLarge }]}>
  <div class="flex"></div>
  <div class="flex flex-col gap-16">
    <p class="text-24 font-bold text-slate-900">{projectData.title}</p>
    <PillRow topics={projectData.topics}/>
    <p class="text-18 font-medium text-slate-500 group-hover:text-slate-600 transition">{projectData.text}</p>
  </div>
  <Link/>
</div>
