---
import { z } from 'astro:content';
import { PILLS_DATA, TopicsEnum } from '../config';

export interface Props {
	topic: z.infer<typeof TopicsEnum>;
}
const { topic } = Astro.props;
---

<div class:list={['flex px-12 py-8 rounded-full border text-14 font-semibold', PILLS_DATA[topic].classes]}>
    {PILLS_DATA[topic].title}
</div>