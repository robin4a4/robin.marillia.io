---
import Link from "./Link.astro";

export interface Props {
  post: any;
  url: string;
}

const { post, url } = Astro.props;
---

<li
  class:list={[
    "snap-center max-md:min-w-[348px] relative flex items-center justify-between gap-24 px-24 py-32 md:p-64 bg-slate-100 rounded-xl hover:scale-[1.015] group transition list-style-none",
  ]}
>
  <div class="flex flex-col justify-between gap-16 flex-1">
    <div class="flex flex-col gap-32">
      <p class="text-32 font-bold text-pink-400">{post.title}</p>
      <p class="text-18 font-medium text-slate-500">{post.description}</p>
      <p class="text-24 font-medium text-slate-400">
        June 5th, 2022 â€” 5 min read
      </p>
    </div>
    <Link href={url} hasAbsoluteInset>Learn more</Link>
  </div>
</li>
